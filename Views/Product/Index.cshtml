@model IEnumerable<Product>
@{
    ViewData["Title"] = "Product List";
}

<h2>Product List</h2>
<a class="btn btn-primary mb-3" asp-action="Create">Add New Product</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Images</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    @foreach (var img in item.Images)
                    {
                        <img src="@img.ImageUrl" width="50" height="50" class="me-1" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-controll="Product" asp-route-id="@item.Id"   class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-controll="Product" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>